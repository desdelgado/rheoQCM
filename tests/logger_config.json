{
  "version": 1,
  "disable_existing_loggers": true,
  "formatters": {
    "brief": {
      "class": "logging.Formatter",
      "datefmt": "%Y-%m-%d %H:%M:%S'",
      "format": "%(asctime)s %(levelname)-8s; %(name)-15s; \n%(message)s"
    },
    "standard": {
      "class": "logging.Formatter",
      "datefmt": "%Y-%m-%d %H:%M:%S'",
      "format": "%(asctime)s %(levelname)-8s; %(asctime)s; %(name)-15s; %(funcName)s;%(lineno)d: \n%(message)s"
    },
    "multi-process": {
      "class": "logging.Formatter",
      "datefmt": "%Y-%m-%d %H:%M:%S'",
      "format": "%(asctime)s %(levelname)-8s; [%(process)d]; %(name)-15s; %(module)s:%(funcName)s;%(lineno)d: \n%(message)s"
    },
    "multi-thread": {
      "class": "logging.Formatter",
      "datefmt": "%Y-%m-%d %H:%M:%S'",
      "format": "%(asctime)s %(levelname)-8s; %(threadName)s; %(name)-15s; %(module)s:%(funcName)s;%(lineno)d: \n%(message)s"
    },
    "verbose": {
      "class": "logging.Formatter",
      "datefmt": "%Y-%m-%d %H:%M:%S'",
      "format": "%(asctime)s %(levelname)-8s; [%(process)d]; %(threadName)s; %(name)-15s; %(module)s:%(funcName)s;%(lineno)d: \n%(message)s"
    },
    "multiline": {
      "class": "logging.Formatter",
      "format": "%(asctime)s Level: %(levelname)s\nTime: %(asctime)s\nProcess: %(process)d\nThread: %(threadName)s\nLogger: %(name)s\nPath: %(module)s:%(lineno)d\nFunction :%(funcName)s\nMessage: %(message)s\n"
    }
  },
    "handlers": {
      "console":{
        "level": "INFO",
        "class": "logging.StreamHandler",
        "formatter": "verbose",
        "stream" : "ext://sys.stdout"
      },
      "file_handler": {
        "level": "DEBUG",
        "class": "logging.handlers.WatchedFileHandler",
        "formatter": "verbose",
        "filename": "",
        "mode": "a",
        "encoding": "utf-8"
      },
      "smtp": {
        "level": "ERROR",
        "class": "logging.handlers.SMTPHandler",
        "formatter": "multiline",
        "mailhost": ["127.0.0.1", 60025],
        "fromaddr": "sender@example.com",
        "toaddrs": ["recipient@example.com"],
        "subject": "Something went wrong"
      }
    },
    "loggers": {
      "debugLogger": {
        "handlers": ["console"],
        "level": "DEBUG",
        "propagate": false
      },
      "inforLogger": {
        "handlers": ["console"],
        "level": "INFO"
      },
      "errorLogger": {
        "handlers": ["console"],
        "level": "ERROR"
      },
      "fileLogger": {
        "handlers": ["file_handler"],
        "level": "ERROR"
      },
      "worningLogger": {
        "handlers": ["console"],
        "level": "WARNING"
      }
    },
    "root": {
      "handlers": ["console", "file_handler", "smtp"],
      "level": "DEBUG"
    }
  }